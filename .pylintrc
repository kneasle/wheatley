[MESSAGES CONTROL]

disable=broad-except,len-as-condition,logging-fstring-interpolation,logging-not-lazy,unexpected-line-ending-format,duplicate-code
load-plugins=pylint.extensions.no_self_use

[FORMAT]

# Just allow me to make one-letter variable names
good-names=a,b,c,d,e,f,g,h,i,k,l,m,n,o,p,q,r,s,t,u,v,w,x,y,z

# Enforce Unix line endings
expected-line-ending-format=LF

max-line-length=110

[DESIGN]

max-args=10
max-attributes=20
max-branches=18
max-locals=20
max-statements=60
